---
pageable: true
per_page: 6
---

<div id="fullpage">
  <div class="section">
    test
  </div>

  <div class="section">
    <header class="main-header no-cover">
      <nav class="main-nav overlay clearfix">
        <% if blog_settings.logo.present?%>
          <%= link_to(image_tag(blog_settings.logo, alt: blog_settings.name), home_path, class: 'blog-logo') %>
        <% end %>

        <% if blog_settings.navigation %>
          <a href="#" class="menu-button icon-menu"><span class="word">Menu</span></a>
        <% end %>
      </nav>

      <div class="vertical">
        <div class="main-header-content inner">
          <h1 class="page-title"><%= blog_settings.name %></h1>
          <h2 class="page-description"><%= blog_settings.description %></h2>
        </div>
      </div>
    </header>

    <main role="main" id="content" class="content">
      <%= partial('shared/page_articles',
                  locals: { page_articles: page_articles, paginate: paginate }) %>
    </main>
  </div>
</div>
